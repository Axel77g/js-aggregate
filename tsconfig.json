{
  "compilerOptions": {
    "target": "ES6", // Cible JavaScript ES6
    "module": "ES6", // Utilisation du module CommonJS
    "outDir": "./dist", // Dossier de sortie pour le JavaScript compilé
    "rootDir": "./src", // Dossier source
    "strict": true, // Act
    "esModuleInterop": true, // Permet l'importation de modules CommonJS
    "typeRoots": ["./types", "./node_modules/@types"],
    "declaration": true, // Génère les fichiers .d.ts
    "declarationMap": false, // Génère les fichiers de mappage .d.ts.map
    "emitDeclarationOnly": false
  },
  "include": ["src", "types"]
}
